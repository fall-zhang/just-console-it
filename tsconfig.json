{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "outDir": "out",
    "skipLibCheck": true,
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "src",
    /* Strict Type-Checking Option */
    "strict": true, /* enable all strict type-checking options */
    /* Additional Checks */
    "noUnusedLocals": true /* Report errors on unused locals. */
  },
  "exclude": [
    "node_modules"
  ]
}